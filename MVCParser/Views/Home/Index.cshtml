
    


<html>
<head>
    @Scripts.Render("~/scripts/jquery-3.4.1.min.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
    <style>

        #table {
            border-collapse: collapse; /*убираем пустые промежутки между ячейками*/
            border: 3px solid grey; /*устанавливаем для таблицы внешнюю границу серого цвета толщиной 1px*/
           
         
        }
        #grid
        {
            margin-top:30px;
            margin-bottom:30px;
            margin-left: 30px;
            padding-right: 30px;           
            overflow:auto;
          
        }
        th {
            border: 2px solid black;
            background-color: lightgray;          
                    
        }        
        th.ASCsorted:after {
            margin: 5px;
            position: relative;
            content: "▲";

        }
        th.DESCsorted:after {
            margin: 5px;
            position: relative;
            content: "▼";

        }
        td {
            border: 1px solid grey;
        }
        .button {
            height: 32px;
            width: 100px;
            font-size: 16px;
            display: block;
        }

        .container {
            display:inline-block;
            position: relative;
            padding-left: 35px;
            margin-bottom: 12px;
            cursor: pointer;
            font-size: 22px;
           margin-right:35px;
                user-select: none;
        }
        .container input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
            height: 0;
            width: 0;

        }

        .checkmark {
            position: absolute;
            top: 0;
            left: 0;
            height: 25px;
            width: 25px;
            background-color: #eee;
        }

        .container:hover input ~ .checkmark {
            background-color: #ccc;
        }

        .container input:checked ~ .checkmark {
            background-color: #2196F3;
        }

        .checkmark:after {
            content: "";
            position: absolute;
            display: none;
        }

        .container input:checked ~ .checkmark:after {
            display: block;
        }

        .container .checkmark:after {
            left: 9px;
            top: 5px;
            width: 5px;
            height: 10px;
            border: solid white;
            border-width: 0 3px 3px 0;
            -webkit-transform: rotate(45deg);
            -ms-transform: rotate(45deg);
            transform: rotate(45deg);
        }
    </style>

</head>
<body>
    <script src="@Url.Content("~/scripts/IndexScripts/GridCreator.js")" type="text/javascript"></script>
  
    <div id="columns">  </div>

    <div id="grid">
        <table id="table"></table>

    </div>


</body>
</html>